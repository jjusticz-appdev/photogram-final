<div>
  <div>
    <h1>
      List of all photos
    </h1>
  </div>
</div>

<hr>

<%if @current_user != nil%>
<div>
  <div>
    <h2>
      Add a new photo
    </h2>

    <form action="/insert_photo" method="post" enctype="multipart/form-data">
      <div>
        <label for="image_box">
          Image
        </label>

        <input type="file" id="image_box" name="query_image" placeholder="Enter a URL for the image">
      </div>

      <div>
        <label for="caption_box">
          Caption
        </label>

        <textarea id="caption_box" name="query_caption" placeholder="Enter a caption for the photo..."></textarea>
      </div>

      <button>
        Add photo
      </button>
    </form>
  </div>
</div>
<%else%>
<%end%>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        
        <th>
          Image
        </th>

        <th>
          Caption
        </th>

        <th>
          Likes count
        </th>

        <th>
          Comments count
        </th>

        <th>
          Owner
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_photos.each do |a_photo| %>
      <tr>
  
        <td>
          <img src="<%= a_photo.image %>">
        </td>

        <td>
          <%= a_photo.caption %>
        </td>

        <td>
          <%= a_photo.likes_count %>
        </td>

        <td>
          <%= a_photo.comments_count %>
        </td>

        <td>
          <%= a_photo.owner_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_photo.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_photo.updated_at) %> ago
        </td>

        <td>
          <a href="/photos/<%= a_photo.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
